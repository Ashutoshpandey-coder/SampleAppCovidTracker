<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="@string/tv_row_state_title"
        android:padding="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
    <LinearLayout
        android:id="@+id/ll_number_cases_per_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/margin_left_heading_states"
        android:paddingStart="@dimen/margin_left_heading_states"
        tools:ignore="RtlSymmetry">
        <TextView
            android:id="@+id/tv_active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="12000"
            android:textColor="@color/active"/>
        <TextView
            android:id="@+id/tv_recovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="40005"
            android:textColor="@color/recovered"/>
        <TextView
            android:id="@+id/tv_deaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="3425"
            android:textColor="@color/deaths"/>
        <TextView
            android:id="@+id/tv_confirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="45789"
            android:textColor="@color/total_cases"/>

    </LinearLayout>

</LinearLayout>